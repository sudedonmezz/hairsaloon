@model Entities.Models.Schedule

<div class="container mt-5">

      <div class="my-5"><i class="fa fa-plus"></i></div>
    <div class="text-center my-5">
         
        <div class="display-6">Add New Schedules</div>
      
</div>


    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form method="post" asp-action="Create">
        <div class="form-group">
            <label for="StartDateTime">Başlangıç Tarihi ve Saati</label>
            <input type="datetime-local" class="form-control" id="StartDateTime" name="StartDateTime" required />
        </div>
        <div class="form-group mt-3">
            <label for="EndDateTime">Bitiş Tarihi ve Saati</label>
            <input type="datetime-local" class="form-control" id="EndDateTime" name="EndDateTime" required />
        </div>
        <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
    </form>
</div>
