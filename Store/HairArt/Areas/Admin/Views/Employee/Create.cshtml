@model Entities.Models.Employee

@{
    ViewBag.Title = "Yeni Çalışan Ekle";
}

<div class="container mt-5">
    <h2>Yeni Çalışan Ekle</h2>

    <!-- TempData'dan gelen hata veya başarı mesajlarını göster -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }

    <form method="post" asp-action="Create">
        <div class="form-group">
            <label for="FirstName">Ad</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName" required />
        </div>
        <div class="form-group">
            <label for="LastName">Soyad</label>
            <input type="text" class="form-control" id="LastName" name="LastName" required />
        </div>
        <div class="form-group">
            <label for="Email">E-posta</label>
            <input type="email" class="form-control" id="Email" name="Email" required />
        </div>
        <div class="form-group">
            <label for="IsAvailable">Müsait Durumu</label>
            <select class="form-control" id="IsAvailable" name="IsAvailable">
                <option value="true">Müsait</option>
                <option value="false">Meşgul</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Ekle</button>
    </form>
</div>
