@model Product

<div class="container mt-5">
     <div class="display-6">Update</div>
   <form method="post" asp-action="Update">
    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="hidden" asp-for="ProductId"/>
    <div class="form-group my-3">
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control"/>
    </div>
     <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
        </select>
    </div>
      <div class="form-group my-3">
        <label asp-for="ProductPrice"></label>
        <input asp-for="ProductPrice" class="form-control"/>
    </div>
     <div class="form-group my-3">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control"/>
    </div>
     <div class="form-group my-3">
        <label asp-for="ProductDescription"></label>
        <input asp-for="ProductDescription" class="form-control"/>
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
<button class="btn btn-primary" type="submit">Update</button>
<a asp-action="Index" class="btn btn-outline-primary">Back</a>
        </div>
        
    </div>
</form>
</div>
