@model RegisterDto

<div class="container login-contaner">
<div class="text-center my-3">
    <h6 class="display-6">
       <i class="fa-solid fa-user-plus"></i> Register
    </h6>
</div>


<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="text-center">
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form asp-action="Register" asp-controller="Account" method="post">
            <div class="form-group my-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter your lastname" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input type="Password" asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <button type="submit" class="btn btn-brand">
                    <i class="fa-solid fa-user-plus"></i> Register
                </button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
</div>