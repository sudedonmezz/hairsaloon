@model LoginModel

<div class="text-center my-3">
    <h6 class="display-6">
       <i class="fa-solid fa-right-to-bracket"></i>  Login</h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="text-center">
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form asp-action="Login" asp-controller="Account" method="post">
            
             
            <div class="form-group my-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group my-3">
                <label asp-for="Password"></label>
                <input type="Password" asp-for="Password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <button type="submit" class="btn btn-brand">
                    <i class="fa-solid fa-right-to-bracket"></i>Login</button>
            </div>
        </form>

        <div>
            If you don't have an account. Please click here to achieve
             <a  class="btn btn-brand" asp-controller="Account"asp-action="Register">registration page.</a>
            
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
