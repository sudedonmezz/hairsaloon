@model IEnumerable<Category>


<div class="container login-contan">
<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="display-6">Categories</h2>
    </div>
    <div class="row justify-content-center">
        @foreach (var cat in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card shadow border-0 h-100 text-center">
                    <!-- Kategori Resmi -->
                    <div class="card-img-container">
                        <img src="~/images/category-@(cat.CategoryId).jpg" 
                             class="card-img-top" 
                             alt="@cat.CategoryName">
                    </div>
                    <!-- Kategori İçeriği -->
                    <div class="card-body d-flex flex-column">
                        <h4 class="card-title">@cat.CategoryName</h4>
                        <p class="card-text">@cat.CategoryDescription</p>
                        <a class="btn btn-brand mt-auto" asp-controller="Category" asp-action="Products" asp-route-id="@cat.CategoryId">
                        Learn More & See Prices
                    </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
</div>