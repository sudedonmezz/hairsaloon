@model HairArt.ViewModels.SelectScheduleViewModel

<h2>Takvim Seçimi</h2>

<form method="post">
    <input type="hidden" name="productId" value="@Model.ProductId" />
    <input type="hidden" name="employeeId" value="@Model.EmployeeId" />
    <label for="schedule">Takvim Seçin:</label>
    <select id="schedule" name="scheduleId" required>
        @foreach (var schedule in Model.Schedules)
        {
            <option value="@schedule.ScheduleId">
                @($"{schedule.StartDateTime:yyyy-MM-dd HH:mm} - {schedule.EndDateTime:yyyy-MM-dd HH:mm}")
            </option>
        }
    </select>
    <button type="submit">İleri</button>
</form>
